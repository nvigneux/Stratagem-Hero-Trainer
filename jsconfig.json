{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "maxNodeModuleJsDepth": 0, // To avoid typing check from node_modules
    "jsx": "react-jsx",
    "module": "ESNext", // ESNext est plus courant pour les projets modernes
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "strict": true, // Renforcer la v√©rification des types
    "types": ["node"],
    "lib": ["dom", "esnext"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
